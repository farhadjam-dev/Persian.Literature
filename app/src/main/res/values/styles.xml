<resources>
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_dialog_background</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="android:windowTitleStyle">@style/DialogTitleStyle</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <!-- غیرفعال کردن پس‌زمینه پیش‌فرض عنوان -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:gravity">center</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item> <!-- اضافه شده برای اطمینان بیشتر -->
    </style>
</resources>