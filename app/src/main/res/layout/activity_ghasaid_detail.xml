<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:layoutDirection="ltr">

    <!-- نوار ابزار -->
    <androidx.cardview.widget.CardView
        android:id="@+id/toolbar_card"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:cardCornerRadius="0dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layoutDirection="ltr"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp">

            <!-- دکمه فلش قبلی -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:gravity="center"
                android:padding="10dp">
                <ImageButton
                    android:id="@+id/prev_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_arrow_prev"
                    android:background="@drawable/circle_button_background"
                    android:tint="@color/textColor"
                    android:contentDescription="قصیده قبلی"
                    android:elevation="2dp" />
            </LinearLayout>

            <!-- عنوان قصیده و دکمه علاقه‌مندی‌ها در وسط -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layoutDirection="ltr"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="8dp">

                <ImageButton
                    android:id="@+id/favorite_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star_outline"
                    android:background="@null"
                    android:contentDescription="اضافه به علاقه‌مندی‌ها"
                    android:padding="3dp"
                    android:layout_marginEnd="5dp" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="عنوان قصیده"
                    android:textSize="18sp"
                    android:fontFamily="@font/almaraibold"
                    android:textColor="@color/textColor"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textDirection="locale"
                    android:paddingHorizontal="8dp" />
            </LinearLayout>

            <!-- دکمه فلش بعدی -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="start"
                android:gravity="center"
                android:padding="10dp">
                <ImageButton
                    android:id="@+id/next_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_arrow_next"
                    android:background="@drawable/circle_button_background"
                    android:tint="@color/textColor"
                    android:contentDescription="قصیده بعدی"
                    android:elevation="2dp" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </androidx.cardview.widget.CardView>

    <!-- میدیا پلیر مدرن و سفارشی -->
    <androidx.cardview.widget.CardView
        android:id="@+id/media_player_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp"
            android:layoutDirection="ltr"
            android:gravity="center_horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp">

                <ImageButton
                    android:id="@+id/play_pause_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_play"
                    android:tint="@color/cardBackground"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:contentDescription="پخش/توقف"
                    android:layout_gravity="center"
                    android:elevation="2dp"
                    android:padding="8dp" />

                <ProgressBar
                    android:id="@+id/download_progress"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/colorAccent"
                    android:visibility="gone" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <SeekBar
                    android:id="@+id/audio_seekbar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:thumbTint="@color/colorAccent"
                    android:progressTint="@color/colorAccent"
                    android:secondaryProgressTint="@color/cardBackground"
                    android:backgroundTint="@color/background"
                    android:paddingVertical="4dp" />

                <TextView
                    android:id="@+id/remaining_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-00:00"
                    android:textColor="@color/cardBackground"
                    android:textSize="14sp"
                    android:textDirection="ltr"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ViewPager2 برای نمایش قصاید -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="0dp"
        android:clipToPadding="false"
        android:background="@color/background"
        app:layout_constraintTop_toBottomOf="@id/toolbar_card"
        app:layout_constraintBottom_toTopOf="@id/media_player_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- آیکون شناور تنظیمات در بالا سمت چپ -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_settings"
        app:fabSize="normal"
        android:contentDescription="تنظیمات"
        app:backgroundTint="@color/colorAccent"
        android:alpha="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- منوی گسترش‌پذیر شناور در کنار آیکون تنظیمات -->
    <LinearLayout
        android:id="@+id/expanded_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="72dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_background"
        android:padding="8dp"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/copy_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_copy"
            android:background="@drawable/circle_button_background"
            android:contentDescription="کپی"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_share"
            android:background="@drawable/circle_button_background"
            android:contentDescription="اشتراک"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/favorite_menu_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star_outline"
            android:background="@drawable/circle_button_background"
            android:contentDescription="علاقه‌مندی‌ها" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>