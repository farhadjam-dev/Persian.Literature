<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Toolbar مدرن -->
    <androidx.cardview.widget.CardView
        android:id="@+id/toolbar_card"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_margin="0dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/colorPrimary">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp">

            <!-- دکمه فلش قبلی در سمت راست -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:gravity="center"
                android:padding="8dp">
                <ImageButton
                    android:id="@+id/prev_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_prev"
                    android:background="@null"
                    android:contentDescription="غزل قبلی" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="قبلی"
                    android:textSize="12sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- عنوان غزل و دکمه علاقه‌مندی‌ها در مرکز -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="8dp">

                <!-- دکمه ستاره (علاقه‌مندی‌ها) -->
                <ImageButton
                    android:id="@+id/favorite_button"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_star_outline"
                    android:tint="#FF0000"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:contentDescription="اضافه به علاقه‌مندی‌ها"
                    android:elevation="2dp"
                    android:padding="2dp"
                    android:layout_marginEnd="8dp" />

                <!-- عنوان غزل -->
                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="عنوان غزل"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingHorizontal="8dp" />
            </LinearLayout>

            <!-- دکمه فلش بعدی در سمت چپ -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="start"
                android:gravity="center"
                android:padding="8dp">
                <ImageButton
                    android:id="@+id/next_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_next"
                    android:background="@null"
                    android:contentDescription="غزل بعدی" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="بعدی"
                    android:textSize="12sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>
    </androidx.cardview.widget.CardView>

    <!-- ViewPager2 برای نمایش غزل‌ها -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"
        android:background="@color/background" />

    <!-- میدیا پلیر مدرن -->
    <androidx.cardview.widget.CardView
        android:id="@+id/media_player_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_margin="5dp"
            android:gravity="center_horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp">

                <ImageButton
                    android:id="@+id/play_pause_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_play"
                    android:background="@drawable/circular_button_background"
                    android:scaleType="centerInside"
                    android:contentDescription="پخش/توقف"
                    android:layout_gravity="center"
                    android:elevation="4dp" />

                <ProgressBar
                    android:id="@+id/download_progress"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/colorAccent"
                    android:visibility="gone" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <SeekBar
                    android:id="@+id/audio_seekbar"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:thumbTint="@color/colorAccent"
                    android:progressTint="@color/colorAccent"
                    android:secondaryProgressTint="@android:color/white"
                    android:backgroundTint="@android:color/white" />

                <TextView
                    android:id="@+id/remaining_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-00:00"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>