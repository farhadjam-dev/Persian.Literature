<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp">

        <!-- دکمه ستاره در سمت چپ -->
        <ImageButton
            android:id="@+id/favorite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_gravity="start"
            android:padding="8dp" />

        <!-- عنوان ساقی‌نامه در سمت راست -->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ساقی‌نامه حافظ"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_gravity="end"
            android:padding="8dp" />
    </androidx.appcompat.widget.Toolbar>

    <!-- RecyclerView برای نمایش ابیات و تفسیر -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

    <!-- میدیا پلیر کوچک -->
    <LinearLayout
        android:id="@+id/media_player_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:padding="8dp"
        android:gravity="center_horizontal">

        <!-- دکمه پخش/توقف و انیمیشن دانلود -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- دکمه پخش/توقف در وسط -->
            <ImageButton
                android:id="@+id/play_pause_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Play/Pause"
                android:layout_gravity="center" />

            <!-- انیمیشن دانلود دور دکمه -->
            <ProgressBar
                android:id="@+id/download_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@android:color/white"
                android:visibility="gone" />
        </FrameLayout>

        <!-- SeekBar و زمان باقی‌مانده -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <!-- نشانگر پیشرفت صوت -->
            <SeekBar
                android:id="@+id/audio_seekbar"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <!-- زمان باقی‌مانده -->
            <TextView
                android:id="@+id/remaining_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-00:00"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>